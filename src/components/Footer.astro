---

<footer class='flex flex-col items-center w-full py-16'>
	<div class='flex flex-col w-full lg:flex-row lg:max-w-[720px]'>
		<div class='flex justify-center lg:justify-start lg:mt-0 lg:basis-1/3'>
			<div class='flex flex-col items-center lg:items-start'>
				<h3 class='text-lg font-bold text-light'>Sobre</h3>

				{
					aboutLinks.map(({ href, text }) => (
						<a
							class='flex mt-6 text-light hover:decoration-light hover:decoration-solid hover:underline hover:underline-offset-2'
							href={href}
						>
							{text}
						</a>
					))
				}
			</div>
		</div>

		<div class='flex justify-center mt-12 lg:mt-0 lg:basis-1/3'>
			<div class='flex flex-col items-center lg:items-baseline'>
				<h3 class='text-lg font-bold text-light'>Podimension</h3>

				{
					podcastLinks.map(({ href, text }) => (
						<a
							class='flex mt-6 text-light hover:decoration-light hover:decoration-solid hover:underline hover:underline-offset-2'
							href={href}
						>
							{text}
						</a>
					))
				}
			</div>
		</div>

		<div class='flex justify-center mt-12 lg:mt-0 lg:justify-end lg:basis-1/3'>
			<div class='flex flex-col items-center lg:items-start'>
				<h3 class='text-lg font-bold text-light'>Rede Sociais</h3>

				{
					socialNetworks.map(({ href, imgSrc, imgAlt, text }) => (
						<a class='flex mt-4' href={href}>
							<img class='w-[25px]' src={imgSrc} alt={imgAlt} />
							<span class='text-light hover:decoration-light hover:decoration-solid hover:underline hover:underline-offset-2 ml-1'>
								{text}
							</span>
						</a>
					))
				}
			</div>
		</div>
	</div>

	<div class='mt-16'>
		<strong>Code Dimension &copy; <span id='copyright-date'></span>{}</strong>
	</div>
</footer>

<script>
	document.getElementById('copyright-date')!.innerHTML = new Date().getFullYear().toString()
</script>
