---
interface Props {
	name?: 'angularModerno' | 'testesAutomatizados'
}

const { name = 'angularModerno' } = Astro.props

const ads = {
	angularModerno: {
		url: 'https://www.codedimension.com.br/cursos/angular-moderno/?utm_source=blog&utm_medium=organic&utm_campaign=blog_website',
		image: {
			src: '/images/ads/ads-curso-angular-moderno.webp',
			alt: 'Imagem com o texto: Curso Angular Moderno e um homem de pele parda usando óculos com a logo do Angular atrás. Logo abaixo existe um botão com o texto "Eu quero!"'
		}
	},
	testesAutomatizados: {
		url: 'https://www.codedimension.com.br/cursos/testes-automatizados/?utm_source=blog&utm_medium=organic&utm_campaign=blog_website',
		image: {
			src: '/images/ads/ads-blog-curso-testes-automatizados-lancamento.webp',
			alt: 'Imagem com o texto: Curso testes automatizado com Angular e um Robo azul com uma logo do Angular atrás. Logo abaixo existe um botão com o texto "Eu quero!"'
		}
	}
}

const selectedAds = ads[name]
---

<a class='w-full' href={selectedAds.url}>
	<img src={selectedAds.image.src} alt={selectedAds.image.alt} />
</a>
